#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('fooding-server:server');
var http = require('http');

let moment = require('moment');
moment.locale("ko");

const { PORT } = process.env;

var port = normalizePort(PORT);
app.set('port', port);

var server = http.createServer(app);
const io = require("socket.io")(server);

/** -------------------------------------- socket event -------------------------------------- */

io.sockets.on('connection', (socket) => {
  socket.on('join', function (data) {
    const room_name = data.id.toString();
    console.log(room_name, "room join !");
    socket.join(room_name);
  });

  socket.on('msg send', (obj) => {
    const room_name = obj.target_id.toString();
    io.sockets.in(room_name).emit('msg receive', { obj : obj.msg });
  });

  socket.on('user connect', (obj) => {
    console.log(obj);
  });
});

/** -------------------------------------- socket event -------------------------------------- */

server.listen(port, () => {
  console.log(`서버 시작 포트번호 :  ${port}`);
  console.log('[현재 시간 : ', moment(new Date()).format("MM / DD / ddd HH시mm분]"));
});
server.on('error', onError);
server.on('listening', onListening);

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    return val;
  }

  if (port >= 0) {
    return port;
  }

  return false;
}

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}